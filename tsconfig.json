{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "./dist/types",
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
